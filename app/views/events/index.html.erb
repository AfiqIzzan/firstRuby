<% if staff_signed_in? %>
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>No of Participants</th>
        <th>Date</th>
        <th>Time</th>
        <th colspan="3"> </th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <% if event.staff == current_staff %>
        <tr>
          <td><%= event.name %></td>          
          <td><%= event.no_of_participant %></td>
          <td><%= event.date %></td>
          <td><%= event.time.strftime('%H:%M:%S') %></td>
          <td><%= link_to 'View', event, class: "btn btn-light btn-sm"  %></td>
          <td><%= link_to 'Edit', edit_event_path(event), class: "btn btn-light btn-sm" %></td>
          <td><%= link_to 'Delete', event, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-outline-danger btn-sm" %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Event', new_event_path, class:"btn btn-secondary" %>
  <% else %>

<h1>Hello World!</h1>
This is my first Rails Webpage...

<% end %>
