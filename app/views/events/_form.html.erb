<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.text_field :name, class:"form-control", placeholder:"Event Name" %>
  </div>

  <div class="field form-group">
    <%= form.number_field :no_of_participant, class:"form-control", placeholder:"Number of participant" %>
  </div>

  <div class="field form-group">
    <%= form.date_field :date, class:"form-control", placeholder:"Date" %>
  </div>

  <div class="field form-group">
    <%= form.time_field :time, class:"form-control", placeholder:"Time" %>
  </div>
  <div class="field form-group">
    <%= form.number_field :staff_id, id: :event_staff_id, class:"form-control", value: current_staff.id, type: :hidden %>
  </div>
  
<br/>
  <div class="actions">
    <%= form.submit class:'btn btn-secondary' %>
  </div>
<% end %>
